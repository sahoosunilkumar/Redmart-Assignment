<?xml version="1.0" encoding="utf-8"?>
                                                                   

    

                 
                          
                                                                

                                           
           

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:focusable="true" android:tag="layout/item_product_list_0" xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/icon"
            style="@style/UserInfo.ImagePlaceHolder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:orientation="vertical">

            <TextView
                style="@style/UserInfo.Header"
                android:tag="binding_1"                                      />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/promoPrice"
                    style="@style/UserInfo.Price"
                    android:layout_alignParentStart="true"
                    android:tag="binding_2"                                                                                                              />

                <TextView
                    style="@style/UserInfo.Text"
                    android:layout_toEndOf="@id/promoPrice"
                    android:tag="binding_3"                                              
                                                                                                        />

                <TextView
                    style="@style/UserInfo.Price"
                    android:layout_alignParentEnd="true"
                    android:tag="binding_4"                                                     
                                                                                                         />
            </RelativeLayout>

            <TextView
                style="@style/UserInfo.Promotion"
                android:tag="binding_5"                                               
                                                                                                                                        />
            <TextView
                style="@style/UserInfo.Text"
                android:tag="binding_6"                                                                                    
                                                                                                   />
            <TextView
                style="@style/UserInfo.Text"
                android:tag="binding_7"                                                  
                                                                                                  />

        </LinearLayout>

    </RelativeLayout>
         