<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UserInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="UserInfo.ImagePlaceHolder">
        <item name="android:layout_width">@dimen/dp_64</item>
        <item name="android:layout_height">@dimen/dp_64</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="UserInfo.Header" parent="UserInfo.Text">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="UserInfo.Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_margin">@dimen/product_info_margin</item>
    </style>

    <style name="UserInfo.Promotion" parent="UserInfo.Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@color/violet</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="UserInfo.Price" parent="UserInfo.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="ErrorText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/dp_48</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/gray</item>
    </style>
</resources>
